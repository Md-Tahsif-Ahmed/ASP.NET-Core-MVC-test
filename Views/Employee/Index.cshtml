@model EmployeeApprovalSystem.Models.Employee
@{
    ViewData["Title"] = "Employee Entry";
}

<h2>Employee Entry</h2>
<form method="post" asp-action="AddEmployee">
    <div>
        <label>Employee Name:</label>
        <input asp-for="EmployeeName" class="form-control" required />
    </div>

    <div>
        <label>Designation:</label>
        <input asp-for="Designation" class="form-control" required />
    </div>

    <div>
        <label>Company:</label>
        <select asp-for="CompanyId" class="form-control" asp-items="@(new SelectList(ViewBag.Companies, "CompanyId", "CompanyName"))">
            <option value="">-- Select Company --</option>
        </select>
    </div>

    <div>
        <label>Department:</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.Departments, "DepartmentId", "DepartmentName"))">
            <option value="">-- Select Department --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>
